<resources>

    <!-- Base application theme. -->
    <!-- Base application theme. 白天的模式 -->
    <style name="day_theme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>

        <!--日间模式对应的字体颜色 和日间模式对应的文本内容-->
        <item name="textColorValue">@color/black</item>
        <item name="textContent">@string/changge_to_night</item>
        <item name="pic">@drawable/ye</item>
        <item name="weixin">@drawable/weixinri</item>
        <item name="xinlang">@drawable/xinlangri</item>
        <item name="qq">@drawable/qqri</item>
        
        
        <item name="haoyou">@drawable/haoyouri</item>
        <item name="huati">@drawable/huatiri</item>
        <item name="shoucang">@drawable/shoucangri</item>
        <item name="huodong">@drawable/huodong</item>
        <item name="shangcheng">@drawable/shangchengri</item>


        <item name="touxiang">@drawable/touxiangri</item>
        <item name="quan">@drawable/quanri</item>
        <item name="sousuo">@drawable/sousuori</item>
        <item name="zi">@drawable/ziri</item>

        <item name="qqdenglu">@drawable/qqdengluri</item>
        <item name="xinlangdenglu">@drawable/xinlangdengluri</item>
        <item name="tengxundenglu">@drawable/tengxundengluri</item>



    </style>

    <!-- Base application theme. 夜晚的模式 -->
    <style name="night_theme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/dark_bg</item>
        <item name="colorPrimaryDark">@color/dark_bg</item>
        <item name="colorAccent">@color/dark_bg</item>
        <item name="android:windowBackground">@color/green</item>

        <!--夜间模式对应的字体颜色 和夜间模式对应的文本内容-->
        <item name="textColorValue">@color/white</item>
        <item name="textContent">@string/changge_to_day</item>
        <item name="pic">@drawable/ri</item>
        <item name="weixin">@drawable/weixinye</item>
        <item name="xinlang">@drawable/xinlangye</item>
        <item name="qq">@drawable/qqye</item>


        <item name="haoyou">@drawable/haoyouye</item>
        <item name="huati">@drawable/huatiye</item>
        <item name="shoucang">@drawable/shoucangye</item>
        <item name="huodong">@drawable/huodongye</item>
        <item name="shangcheng">@drawable/shangchengye</item>


        <item name="touxiang">@drawable/touxiangye</item>
        <item name="quan">@drawable/quanri</item>
        <item name="sousuo">@drawable/sousuoye</item>
        <item name="zi">@drawable/ziye</item>


        <item name="qqdenglu">@drawable/qqdengluye</item>
        <item name="xinlangdenglu">@drawable/xinlangdengluye</item>
        <item name="tengxundenglu">@drawable/tengxundengluye</item>

    </style>
    <!--设置TABlayout字体大小-->
    <style name="title">

        <item name="android:textSize">22sp</item>
    </style>
<!--设置popwindow-->
    <style name="popWindowAnimation" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/item_in</item>
        <item name="android:windowExitAnimation">@anim/item_out</item>
    </style>

</resources>
