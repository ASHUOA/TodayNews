<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/linearLayout"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    >
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/xiaoyu"
        android:layout_gravity="center"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设置"
        android:textSize="25sp"
        android:layout_gravity="center"
        android:layout_marginLeft="195dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="意见反馈"
        android:textSize="25sp"
        android:layout_gravity="center"
        android:layout_marginLeft="140dp"
        />
</LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#AAAA"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_height="match_parent"
            >

            <TextView
                android:id="@+id/t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="列表显示摘要"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="50dp"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:textSize="20sp"
                />
            <CheckBox
                android:id="@+id/cb1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/t1"
                android:layout_marginLeft="220dp"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@id/t1"
                />

            <TextView
                android:layout_below="@id/t1"
                android:id="@+id/t2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="字体大小"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="40dp"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:textSize="20sp"
                />
            <TextView
                android:id="@+id/t3"
                android:layout_below="@id/t2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="列表页评论"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="40dp"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:textSize="20sp"
                />
            <TextView
                android:id="@+id/t4"
                android:layout_below="@id/t3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="非wife网络"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="40dp"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:textSize="20sp"
                />
            <TextView
                android:id="@+id/tiaoshi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/t4"
                android:layout_marginLeft="240dp"
                android:layout_alignBottom="@id/t4"
                android:text=">"
                />

            <TextView
                android:id="@+id/t"
                android:layout_below="@id/t4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="清理缓存"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="40dp"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:textSize="20sp"
                />
            <TextView
                android:id="@+id/t5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/t"
                android:layout_marginLeft="80dp"
                android:layout_alignBottom="@id/t"
                android:text="。。。"
                />
            <TextView
                android:id="@+id/clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/t"
                android:layout_marginLeft="240dp"
                android:layout_alignBottom="@id/t"
                android:text=">"
                />
            <TextView
                android:id="@+id/t6"
                android:layout_below="@id/t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="推送通知"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="40dp"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:textSize="20sp"
                />
            <CheckBox
                android:id="@+id/cb2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/t6"
                android:layout_alignBottom="@id/t6"
                android:layout_alignLeft="@id/cb1"
                />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
